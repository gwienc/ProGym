@model IEnumerable<ProGym.Models.Workout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}

@Html.Partial("_BreadCrumb")

<section>
    <div class="container pb-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row">
                        <div class="col-lg-5 pt-5 ps-4">
                            <div class="card-body add-workout text-center ps-4 pt-4">
                                <h3 class="card-text">Dodaj Trening</h3>
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <img src="@Url.Content("~/Content/Images/AddWorkout.png")" class="img-fluid rounded-start" alt="...">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container pt-5">
        <div class="workouts row text-center">
            <h1>Twoje treningi</h1>
        </div>
    </div>
</section>
<section>
    <div class="container pt-5">
        <div class="row">
            <div class="col-12">
                <div id="productlist-section">
                    <div class="row pb-4">
                        @foreach (var workout in Model)
                        {
                            <div class="col-xl-3 col-md-6 p-3">
                                <div class="card border-success h-75">
                                    <div class="card-body">
                                        <h5 class="card-title">@workout.Name</h5>
                                        <p class="card-text">@workout.CreateDate</p>
                                        <a href="" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#trainingInfoModal">Szczegóły</a>
                                        <br /><br /><br />
                                    </div>
                                </div>
                            </div>
                            <div class="modal fade" id="trainingInfoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Lista ćwiczeń</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <table class="table table-responsive table-exercises">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">Nazwa</th>
                                                        <th scope="col">Seria</th>
                                                        <th scope="col">Ciężar</th>
                                                        <th scope="col">Ilość powtórzeń</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        int position = 1;
                                                        string name = "";
                                                    }
                                                    @foreach (var exercise in workout.Exercises)
                                                    {
                                                        if (exercise.Name != name)
                                                        {
                                                            position = 1;
                                                            <tr class="table-secondary">
                                                                <th scope="row" width="40%">@exercise.Name</th>
                                                                <td width="10%"></td>
                                                                <td width="20%"></td>
                                                                <td width="30%"></td>
                                                            </tr>
                                                            <tr>
                                                                <th scope="row" width="40%"></th>
                                                                <td width="10%">@(position++)</td>
                                                                <td width="20%">@exercise.Weight kg</td>
                                                                <td width="30%">@exercise.RepetitionsNumber</td>
                                                            </tr>
                                                            name = exercise.Name;
                                                        }
                                                        else
                                                        {
                                                            <tr>
                                                                <th scope="row" width="40%"></th>
                                                                <td width="10%">@(position++)</td>
                                                                <td width="20%">@exercise.Weight kg</td>
                                                                <td width="30%">@exercise.RepetitionsNumber</td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

