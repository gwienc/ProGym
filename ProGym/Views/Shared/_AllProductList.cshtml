@model IEnumerable<ProGym.Models.Product>
@using ProGym.Infrastructure
@{
    ViewBag.Title = "ProductList";
}


<div id="productlist-section pt-5">
    <div class="row pb-4 pt-5">
        <table class="table all-products pt-5">
            <thead>
                <tr>
                    <th scope="col">Nr Produktu</th>
                    <th scope="col"></th>
                    <th scope="col">Nazwa</th>
                    <th scope="col">Producent</th>
                    <th scope="col">Cena</th>
                    <th scope="col">W sprzedaży</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                <tr>
                    <th scope="row">@product.ProductID</th>
                    <td width="30%"><a href="@Url.Action("Details", "Store", new { id = product.ProductID })"><img src="@Url.ProductPhotoPath(product.PhotoFileName)" class="card-img-top" alt="..."></a></td>
                    <td>@product.Name</td>
                    <td>@product.ProducerName</td>
                    <td>@product.Price</td>
                    @if (product.IsHidden)
                    {
                        <td width="10%">Wycofany ze sprzedaży </td>
                    }
                    else
                    {
                        <td width="10%">W aktualnej sprzedaży </td>
                    }

                <td>
                    <a href="@Url.Action("AddProduct", "Manage", new { productId = product.ProductID })" class="btn btn-sm btn-success"> Edytuj </a>
                </td>
                </tr>

                @*<div class="col-xl-3 col-md-6 p-3">
                    <div class="card h-100">
                        <a href="@Url.Action("Details", "Store", new { id = product.ProductID })"><img src="@Url.ProductPhotoPath(product.PhotoFileName)" class="card-img-top" alt="..."></a>
                        <div class="card-body">
                            <a id="product-name" href="@Url.Action("Details", "Store", new { id = product.ProductID })"><p class="card-title h-75">@product.Name</p></a>
                            <a href="@Url.Action("AddToCart", "Cart", new { id = product.ProductID })" class="btn btn-sm btn-primary">Dodaj do koszyka</a>
                            <br /><br /><br />
                        </div>
                    </div>
                </div>*@
            }
                </tbody>
            </table>
    </div>
</div>


